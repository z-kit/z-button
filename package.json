{
  "name": "z-button",
  "version": "1.2.0",
  "description": "A button UI component for your web application",
  "main": "dist/index.js",
  "minified:main": "dist/index.min.js",
  "jsnext:main": "dist/module.js",
  "module": "dist/module.js",
  "scripts": {
    "lint": "eslint webpack.config.babel.js .storybook src stories test/regression test/unit/suite && stylelint src/style.css",
    "test": "npm run lint && npm run unit-test && npm run regression-test",
    "kill": "fkill node",
    "clean": "rimraf dist",
    "unit-test": "webpack --config test/unit/webpack.config.babel.js && ava test/unit/testBundle.js",
    "regression-test": "node test/regression/server.js && ava test/regression/suite",
    "regression-test-kill": "npm run regression-test && npm run kill",
    "build-module": "mkdirp dist && babel --source-maps -o dist/module.js src/component.js",
    "package": "webpack",
    "min-package": "cross-env MIN=true webpack -p",
    "build": "npm run package && npm run min-package && npm run build-module",
    "start": "npm run storybook",
    "storybook": "start-storybook -p 6006",
    "prepublish": "npm run build"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "plugins": ["transform-object-rest-spread"],
    "ignore": [
      "src/webcomponent"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "extends": [
      "airbnb"
    ],
    "rules": {
      "new-cap": "off",
      "import/no-extraneous-dependencies": "off",
      "react/prop-types": "off",
      "react/jsx-filename-extension": "off",
      "global-require": "off",
      "jsx-a11y/href-no-hash": "off"
    },
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": ".storybook/webpack.config.js"
        }
      }
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": "last 2 versions"
      },
      "cssnano": {
        "discardUnused": false
      }
    }
  },
  "greenkeeper": {
    "ignore": [
      "eslint-config-airbnb",
      "eslint-plugin-import",
      "eslint-plugin-jsx-a11y"
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "plugins": [
      "stylelint-selector-bem-pattern"
    ],
    "rules": {
      "comment-whitespace-inside": null,
      "plugin/selector-bem-pattern": {
        "componentName": "[A-Z]+",
        "componentSelectors": {
          "initial": "^\\.{componentName}(?:-[a-z]+)?$",
          "combined": "^\\.combined-{componentName}-[a-z]+$"
        },
        "utilitySelectors": "^\\.util-[a-z]+$"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/z-kit/z-button.git"
  },
  "keywords": [
    "z-kit",
    "component",
    "browser",
    "button"
  ],
  "author": "Matheus Kautzmann",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/z-kit/z-button/issues"
  },
  "homepage": "https://github.com/z-kit/z-button",
  "devDependencies": {
    "@storybook/addons": "^v4.0.0-alpha.14",
    "@storybook/react": "^v4.0.0-alpha.14",
    "autoprefixer": "^9.1.0",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.2.0",
    "cross-spawn": "^6.0.5",
    "css-loader": "^1.0.0",
    "cssnano": "^4.0.5",
    "eslint": "^5.2.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-react": "^7.10.0",
    "extract-text-webpack-plugin": "3.0.2",
    "jsx-test-helpers": "^3.0.0",
    "mini-css-extract-plugin": "^0.4.1",
    "mkdirp": "^0.5.1",
    "nightmare": "^3.0.1",
    "npm-run-all": "^4.1.3",
    "null-loader": "^0.1.1",
    "postcss-loader": "^2.1.6",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "rimraf": "^2.6.2",
    "style-loader": "^0.21.0",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-selector-bem-pattern": "^2.0.0",
    "wait-on": "^2.1.0",
    "webpack": "^4.16.4",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  }
}
